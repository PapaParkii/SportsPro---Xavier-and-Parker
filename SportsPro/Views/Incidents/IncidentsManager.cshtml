@model List<Incident>
@{
    ViewBag.Title = "Incidents";
}

<div class="containter">
    <header class="jumbotron">
        <h3>Incidents</h3>
    </header>


    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Product</th>
                    <th>Customer</th>
                    <th>Date Opened</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model)
                {
                    <tr>
                        <td>@incident.Title</td>
                        <td>@incident.Product</td>
                        <td>@incident.Customer</td>
                        <td>@incident.DateOpened</td>
                        <td>
                            <a asp-controller="Incident" asp-action="Edit" class="btn btn-secondary"
                               asp-route-id="@incident.IncidentID">Edit</a>
                            <a asp-controller="Incident" asp-action="Delete" class="btn btn-secondary"
                               asp-route-id="@incident.IncidentID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-controller="Incident" class="btn btn-primary" asp-action="Add">Add Incident</a>
</div>