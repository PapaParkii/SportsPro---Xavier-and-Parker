@model Product
@{
    string action = ViewBag.Action == "Add" ? "Add" : "Edit";
    ViewData["Title"] = $"{action} Product";
}

<h2>@ViewData["Edit"]</h2>

<form asp-action="AddEdit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control">
        <span asp-validation-for="YearlyPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control" readonly>
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ProductID" />

   

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
